@model YuHan.CabsBooking.ApplicationCore.Models.Request.BookingUpdateRequestModel

@{
    ViewData["Title"] = "Delete Booking";
}

<h1>
    @ViewData["Title"]
</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Delete">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group">
                <label asp-for="Id"></label>
                <input asp-for="Id" class="form-control" />
                <span asp-validation-for="Id" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Delete" class="btn btn-danger" onclick="return confirm('Are you sure you want to delete?')"/>
            </div>

        </form>
    </div>
</div>

<div>
    <a asp-controller="Booking" asp-action="Index">Back to Booking Page</a>
</div>